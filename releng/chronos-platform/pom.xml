<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.codbex.chronos</groupId>
		<artifactId>codbex-chronos-releng-parent</artifactId>
		<version>0.5.4</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<name>codbex - chronos - platform</name>
	<artifactId>codbex-chronos-platform</artifactId>
	<version>0.5.4</version>
	<packaging>war</packaging>

	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>true</failOnMissingWebXml>
					<webXml>src/main/webapp/WEB-INF/web.xml</webXml>
					<warName>ROOT</warName>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

	<dependencies>

		<!-- Chronos Modules -->
		<dependency>
		 	<groupId>com.codbex.chronos</groupId>
		 	<artifactId>codbex-chronos-modules-app</artifactId>
		 	<version>0.5.4</version>
		</dependency>
		<dependency>
		 	<groupId>com.codbex.chronos</groupId>
		 	<artifactId>codbex-chronos-modules-data</artifactId>
		 	<version>0.5.4</version>
		</dependency>
		<dependency>
		 	<groupId>com.codbex.chronos</groupId>
		 	<artifactId>codbex-chronos-modules-ext</artifactId>
		 	<version>0.5.4</version>
		</dependency>

		<!-- Platform -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${slf4j.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>ch.qos.logback</groupId>
		    <artifactId>logback-core</artifactId>
		    <version>${logback.version}</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>ch.qos.logback</groupId>
		    <artifactId>logback-classic</artifactId>
		    <version>${logback.version}</version>
		    <scope>compile</scope>
		</dependency>
	
		<!-- Dirigible -->
		<dependency>
		 	<groupId>org.eclipse.dirigible</groupId>
		 	<artifactId>dirigible-server-all</artifactId>
		 	<version>${dirigible.version}</version>
		</dependency>

	</dependencies>

	<properties>
		<license.header.location>../../licensing-header.txt</license.header.location>
	</properties>
</project>